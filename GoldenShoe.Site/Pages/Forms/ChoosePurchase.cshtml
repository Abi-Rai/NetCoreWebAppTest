@page
@model GoldenShoe.Site.ChoosePurchaseModel

@{
    ViewData["Title"] = "ChoosePurchase";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>ChoosePurchase</h1>
@if (Model.NoResults == true)
{
    <h2>No purchases found</h2>
}
else
{


    <h4>Refund</h4>
    <hr />

    <form method="post">
        <div class="form-group">
            <div class="col-sm-10">
                <label>Select product to refund</label>
                <select asp-for="Requests.ForShoeID" asp-items="Model.Options"></select>
                <span asp-validation-for="Requests.ForShoeID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                <label asp-for="Requests.Reason" class="control-label"></label>
                <select asp-for="Requests.Reason" asp-items="Model.RReasons" placeholder="Reason"><option value="">Select Reason</option></select>
                <span asp-validation-for="Requests.Reason" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                <label asp-for="Requests.Message" class="control-label"></label>
                <input type="text" asp-for="Requests.Message" placeholder="More details for Return" />
                <span asp-validation-for="Requests.Message" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group"><button type="submit" value="Request" class="btn btn-primary">Submit</button></div>

        <div class="form-group">
            <div class="col-auto">
                <a asp-page="./SupportIndex">Back to List</a>
            </div>
        </div>
    </form>
    
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
